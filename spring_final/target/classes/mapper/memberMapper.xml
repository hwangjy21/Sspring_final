<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.MemberDAO">
	<update id="updateLastLogin">
		update member set last_login = now() where email=#{email}
	</update>
	<select id="selectEmail"
		resultType="com.myweb.www.security.MemberVO">
		select * from member where email=#{email}
	</select>

	<select id="selectAuth"
		resultType="com.myweb.www.security.AuthVO">
		select * from auth_member where email =#{email}
	</select>

	<insert id="insert">
		insert into member(email, pwd, nick_name) values
		(#{email},#{pwd},#{nickName})
	</insert>

	<insert id="insertAuth">
		insert into auth_member values (#{email},'ROLE_USER')
	</insert>

	<select id="selctList"
		resultType="com.myweb.www.security.MemberVO">
		select * from member
	</select>

	<select id="authlist" resultType="com.myweb.www.security.AuthVO">
		select * from auth_member where email=#{email}

	</select>

	<select id="getdetail" parameterType="String" resultType="com.myweb.www.security.MemberVO">

			select * from member where email=#{email}
	</select>
	
	<update id="modifyPwdEmpty">
	update member set nick_name=#{nickName} where email=#{email}
	</update>
	
	<update id="modify">
	update member set pwd=#{pwd},nick_name=#{nickName} where email=#{email}
	</update>
	
	<delete id="delete">
	delete from member where email=#{email}
	</delete>
</mapper>